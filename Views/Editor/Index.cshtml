@{
}
<h2>Live Documents Here!</h2>

<a href="/Editor/Create"><button class="btn-primary float-right"> Design Here</button></a>

<table class="table">
    <thead>
        <tr>
            <th>Document ID</th>
            <th>Author Name</th>
            <th>Title</th>
            <th> Edit / View</th>
        </tr>
    </thead>
    <tbody>
        @foreach (EditorModel editor in @ViewBag.EditorList)
        {
            <tr>
                <td>@editor.DocumentID</td>
                <td>@editor.Author</td>
                <td>@editor.DocumentTitle</td>
                <td>@*<a href="/Editor/Edit"><button class="btn-primary float-right"> Edit</button></a>
                    <a href="/Editor/View"><button class="btn-primary float-right"> View</button></a>*@

                    <a asp-action="Edit" asp-route-id="@editor.DocumentID"><button class="my-button" type="submit">Edit</button></a>
                    <a asp-action="View" asp-route-id="@editor.DocumentID"><button class="my-button" type="submit">View</button></a>

                </td>
            </tr>
        }
    </tbody>
</table>

