@{
    ViewData["Title"] = "View";
}
@model Assessment4Apr17.Models.EditorModel

<div>
    <h6>@Html.DisplayNameFor(model => model.Author) - @Html.DisplayFor(model => model.Author) | @Html.DisplayNameFor(model => model.DocumentTitle) - @Html.DisplayFor(model => model.DocumentTitle)</h6>
    <hr />
</div>
<div>
    @Html.DisplayFor(model => model.DocumentContent)
</div>
<div>
    
    <form  asp-action="Download" asp-controller="Editor">
        <a asp-action="Index"><button class="my-button" type="submit">Back</button></a>
            <input type="hidden" value="@Model.DocumentTitle" name="DocumentTitle" />
            <input type="hidden" value="@Model.DocumentContent" name="DocumentContent" />
            <button class="btn-primary">Save!</button>
           
    </form>

</div>